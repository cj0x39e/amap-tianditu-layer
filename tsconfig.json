{
  "compilerOptions": {
    "target": "ES3",
    "lib": ["ES2015"],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*", "./test/**/*", "./types/**/*", "./demo/**/*"]
}
